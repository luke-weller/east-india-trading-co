@{
    ViewData["Title"] = "Create a Booking";
}
<h1 style="text-align:center;">@ViewData["Title"]</h1>

<div class="container center-div w-50">
  <form>
      <div class="row g-3">
        <div class="col-md-6">
            <label for="from">Departure</label>
            <input type="text" id="from" class="form-control" placeholder="From" required>
        </div>
        <div class="col-md-6">
            <label for="to">Arrival</label>
            <input type="text" id="to" class="form-control" placeholder="To" required>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-md-6">
            <label for="send_date">Departure date</label>
            <input type="date" id="send_date" class="form-control" required>
        </div>
        <div class="col-md-6">
          <label for="type">Parcel Type</label>
          <select id="type" class="form-control" required>
              <option value="regular">Regular</option>
              <option value="liveAnimal">Live Animal</option>
              <option value="refrigerated">Refrigerated</option>
              <option value="weapon">Weapon</option>
          </select>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-md-6">
            <label for="weight">Parcel weight (&lt;100 kg)</label>
            <input type="number" id="weight" class="form-control" required>
        </div>
        <div class="col-md-6">
            <label for="length">Length (cm)</label>
            <input type="number" id="length" class="form-control" required>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-md-6">
            <label for="width">Width (cm)</label>
            <input type="number" id="width" class="form-control" required>
        </div>
        <div class="col-md-6">
            <label for="height">Height (cm)</label>
            <input type="number" id="height" class="form-control" required>
        </div>
      </div>
  </form>

<br>
<div class="d-flex justify-content-end">
<button type="submit" class="btn btn-primary float-end">Search</button>
</div>
</div>