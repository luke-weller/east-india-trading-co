@{
    ViewData["Title"] = "Create a Booking";
}


  <form style="float:left;padding-right:50px">
      <label for="from">Departure</label><br>
      <input type="text" id="from" name="from" placeholder="From" required>

      <label for="to">Arrival</label><br>
      <input type="text" id="to" name="to" placeholder="To" required><br>

      <label for="send_date">Departure date</label><br>
      <input type="date" id="send_date" name="send_date" required><br>

      <label for="type">Parcel type</label><br>
      <select name="type" id="type" required>
      <option value="regular">Regular</option>
      <option value="liveAnimal">Live Animal</option>
      <option value="refrigerated">Refrigerated</option>
      <option value="weapon">Weapon</option>
      </select>

      <label for="weight">Parcel weight (&lt;100 kg)</label><br>
      <input type="number" id="weight" name="weight" max="100" required><br>

      <label for="length">Length (cm)</label><br>
      <input type="number" id="length" name="length" required><br>

      <label for="width">Width (cm)</label><br>
      <input type="number" id="width" name="width" required><br>

      <label for="height">Height (cm)</label><br>
      <input type="number" id="height" name="height" required><br>
      <input type="button">	
  </form>
  